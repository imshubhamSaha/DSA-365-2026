/**
 * Definition for a binary tree node.
 * function TreeNode(val, left, right) {
 *     this.val = (val===undefined ? 0 : val)
 *     this.left = (left===undefined ? null : left)
 *     this.right = (right===undefined ? null : right)
 * }
 */
/**
 * @param {TreeNode} root
 * @return {number}
 */
var maxProduct = function(root) {
    const MOD = 1000000007;

    const dfs = function(node) {
        if (!node)
            return 0;
        node.val += dfs(node.left) + dfs(node.right);
        return node.val;
    }

    const total_sum = dfs(root);

    let max_product = 0;
    const q = [root];
    while (q.length) {
        const node = q.shift();

        const current_prod = (total_sum - node.val) * node.val;
        max_product = Math.max(max_product, current_prod);

        if (node.left) 
            q.push(node.left);
        if (node.right)
            q.push(node.right);
    }

    return max_product % MOD;
};
