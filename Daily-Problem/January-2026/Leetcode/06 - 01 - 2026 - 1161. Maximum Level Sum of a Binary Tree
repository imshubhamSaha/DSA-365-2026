/**
 * Definition for a binary tree node.
 * function TreeNode(val, left, right) {
 *     this.val = (val===undefined ? 0 : val)
 *     this.left = (left===undefined ? null : left)
 *     this.right = (right===undefined ? null : right)
 * }
 */
/**
 * @param {TreeNode} root
 * @return {number}
 */
var maxLevelSum = function(root) {
    if (root === null)
        return 0;

    const q = [];
    q.push(root);
    let maxSum = -Infinity;
    let level = 1;
    let maxLevel = 1;

    while (q.length) {
        const len = q.length;
        let levelSum = 0;

        for (let i = 0; i < len; i++) {
            const node = q.shift();
            levelSum += node.val;

            if (node.left)
                q.push(node.left);
            if (node.right)
                q.push(node.right);
        }

        if (levelSum > maxSum) {
            maxSum = levelSum;
            maxLevel = level;
        }
        level += 1;
    }

    return maxLevel;
};
