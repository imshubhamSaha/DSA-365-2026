/**
 * @param {number[]} digits
 * @return {number[]}
 */
var plusOne = function(digits) {
    const n = digits.length;
    const result = [];
    result.push((digits[n-1] + 1) % 10)
    let carry = Math.floor((digits[n-1] + 1)/10);
    let idx = n - 2;

    while (idx >= 0 || carry) {
        const num = idx >= 0 ? digits[idx] : 0;
        let sum = num + carry;
        carry = Math.floor(sum/10);
        result.push(sum%10);
        idx -= 1;
    }

    result.reverse();
    return result;
};
